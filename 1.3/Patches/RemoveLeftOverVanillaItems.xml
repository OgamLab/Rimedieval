<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <!--Set leftover/out of place vanilla items to techlevel industrial so pawns won't spawn with it as they look out of place or otherwise weird for a medieval playthrough-->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Apparel_CowboyHat" or defName="Apparel_BowlerHat" or defName="Apparel_Beret" or defName="Apparel_Tuque"]</xpath>
        <value>
            <techLevel>Industrial</techLevel>
        </value>
    </Operation>
    
    <!--Set the Top Hat and the Ladies hat to Medieval so you won't see tribe pawns/factions running around in fancy hats.-->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Apparel_HatTop" or defName="Apparel_HatLadies"]</xpath>
        <value>
            <techLevel>Medieval</techLevel>
        </value>
    </Operation>
</Patch>